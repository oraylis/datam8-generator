{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "model-path",
            "type": "promptString",
            "default": "<<change your local path here>>\\datam8-sample-solution",
            "description": "path to meta model"
        }
    ], 
    "configurations": [
        {
            "name": "debug dm8gen: new-model-01",
            "type": "debugpy",
            "request": "launch",
            "module": "dm8gen",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-a", "refresh_generate", 
                "-s", "${input:model-path}\\ORAYLISDatabricksSample.dm8s",
                "-src", "${input:model-path}\\Generate\\databricks-lake",
                "-dest", "${input:model-path}\\Output",
                "-m", "${input:model-path}\\Generate\\databricks-lake\\__modules",
                "-c", "${input:model-path}\\Generate\\databricks-lake\\__collections"
            ]
        }
    ]
}